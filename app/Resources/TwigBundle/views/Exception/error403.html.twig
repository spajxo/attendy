{% extends '::layout.html.twig' %}

{% block content %}
    <div class="error-page">
        <h2 class="headline text-yellow"> {{ status_code }}</h2>

        <div class="error-content">
            <h3><i class="fa fa-warning text-yellow"></i> {{ status_text }}</h3>

            <p>
                We are not allowed to see this page.
                You may <a href="{{ path('dashboard') }}">return to dashboard</a> or try using the search form.
            </p>

            <form class="search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search">

                    <div class="input-group-btn">
                        <button type="submit" name="submit" class="btn btn-warning btn-flat"><i
                                    class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
                <!-- /.input-group -->
            </form>
        </div>
        <!-- /.error-content -->
    </div>
{% endblock %}