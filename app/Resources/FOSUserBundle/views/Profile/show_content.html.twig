{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-md-12">
        <!-- Profile Image -->
        <div class="box box-primary">
            <a href="{{ path('fos_user_profile_edit') }}" role="button" class="btn btn-box-tools text-muted pull-right"><i
                        class="fa fa-edit"></i></a>
            <div class="box-body box-profile">
                {% if app.user.avatarWebPath is not empty %}
                    <img class="profile-user-img img-responsive img-circle"
                         src="{{ app.user.avatarWebPath|imagine_filter('thumb') }}" alt="User profile picture">
                {% endif %}
                <h3 class="profile-username text-center">{{ app.user.username }}</h3>

                <p class="text-muted text-center">{{ app.user.email }}</p>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
