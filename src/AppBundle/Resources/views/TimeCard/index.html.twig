{% extends "::layout.html.twig" %}

{% block h1 %}
    {{ 'Time Card'|trans }}
    <small>{{ 'Summary'|trans }}</small>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title"><strong>{{ month|date }}</strong></h3>
                    <div class="box-tools">
                        <div class="btn-group">
                            <a href="{{ path('timecard_index', {month: month|date_modify('-1 month')|date('Y-m-d')}) }}"
                               class="btn btn-box-tool btn-default"><i class="fa fa-arrow-left"></i></a>
                            <a href="{{ path('timecard_index') }}"
                               class="btn btn-box-tool btn-default">{{ 'Today'|trans }}</a>
                            <a href="{{ path('timecard_index', {month: month|date_modify('+1 month')|date('Y-m-d')}) }}"
                               class="btn btn-box-tool btn-default"><i class="fa fa-arrow-right"></i></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="box box-secondary">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ 'Statistics'|trans }}</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <td>{{ 'Workder'|trans }}</td>
                            <td>
                                    <span class="badge bg-green"
                                          title="{{ timeCard.workedMinutes|number_format }} {{ 'minutes'|trans }}">
                                        {{ timeCard.workedHours|number_format }} {{ 'hours'|trans }}
                                    </span>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

{% endblock %}

